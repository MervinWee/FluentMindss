<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundimage"
    tools:context=".ReadingActivity">


    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Learning"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/purple"
        />

    <ImageView
        android:id="@+id/ivback"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:src="@drawable/baseline_keyboard_arrow_left_24" />


    <TextView
        android:id="@+id/grammar_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reading"
        android:textColor="@color/brown"
        android:textSize="50dp"
        android:fontFamily="@font/roboto"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_below="@id/text_view"
        />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6/26"
        android:layout_marginStart="16dp"
        android:layout_below="@id/grammar_text_view"
        android:layout_gravity="end"
        android:textSize="30sp"
        />
    <ImageView
        android:id="@+id/IVSettings"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/baseline_volume_up_24" />
    <TextView
        android:id="@+id/past_tense_verb_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read sentence as the speaker says"
        android:layout_marginStart="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:textSize="35sp"
        android:layout_below="@id/date_text_view"
        />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:src="@drawable/applecartoon" />


    <TextView
        android:id="@+id/swim_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I like to eat an apple"
        android:layout_marginStart="16dp"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_below="@id/past_tense_verb_text_view">

    </TextView>
    <TextView
        android:id="@+id/tvindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saya suka apel"
        android:layout_marginStart="16dp"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:layout_below="@id/past_tense_verb_text_view">

    </TextView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu" />

    <View
        android:id="@+id/bottom_navigation_bar_background"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_above="@id/bottom_navigation_view"
        android:background="@color/bottom_navigation_bar_background" />


</LinearLayout>